{
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Debug FastAPI (uvicorn)",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/backend/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}