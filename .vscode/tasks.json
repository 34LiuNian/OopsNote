{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: dev",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe -m pip install -e .[dev]; ${workspaceFolder}/.venv/Scripts/python.exe -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "frontend: dev",
      "type": "shell",
      "command": "npm install; npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "dev: all",
      "dependsOn": [
        "backend: dev",
        "frontend: dev"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
